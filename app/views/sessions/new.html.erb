<div class="row">
    <div class="col-xs-12">
    <div class="page-header">
            <h1>Sign In </h1>
        </div>
    
        <%= form_for(:session, url: signin_path) do |f| %>
            
            <div class="form-group">
                <%= f.label :email, for: :email, class: 'col-xs-3 control-label' %>
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.text_field :email, class: 'form-control'%>
                </div>
            </div>
            
            <div class="form-group">
                <%= f.label :password, for: :password, class: 'col-xs-3 control-label' %>
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.text_field :password, class: 'form-control'%>
                </div>
            </div>
            
            <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "Sign In",  class: 'form-control btn btn-success' %>
            </div>
          </div>
        <% end %>
        
        
    </div>
</div>